# Root example environment values. Copy into `.env` files and update as needed.

# Backend (Laravel)
APP_NAME=Solverse
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

LOG_CHANNEL=stack

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=solverse
DB_USERNAME=root
DB_PASSWORD=

# Mail (optional)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Frontend (Vite)
# Set this to the backend API base URL (no trailing slash), e.g. http://127.0.0.1:8000/api
VITE_API_URL=http://127.0.0.1:8000/api
